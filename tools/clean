#! /bin/sh

# remove dirs and files whose name start with ++
find $(dirname $0)/.. -ignore_readdir_race -name ++\* -prune -exec rm -Rf {} \;

# remove qmake-generated makefiles
for f in $(find $(dirname $0)/.. -name Makefile)
do
	if grep -E '^\# Generated by qmake' $f > /dev/null
	then
		rm -f $f
	fi
done
