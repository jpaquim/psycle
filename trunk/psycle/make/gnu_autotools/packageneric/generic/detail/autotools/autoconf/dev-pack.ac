# dev-pack



packageneric__dev_pack__version__required=21 &&
#AC_CANONICAL_BUILD # what operating system we are building from
#case $build in
case "$OSTYPE" in # to be able to do this test this early, we don't even use $build
	msys)
		packageneric__echo "environment variable PACKAGENERIC__DEV_PACK__VERSION: $PACKAGENERIC__DEV_PACK__VERSION" &&
		test "${PACKAGENERIC__DEV_PACK__VERSION:-0}" -ge $packageneric__dev_pack__version__required ||
		{
			packageneric__echo "This dev-pack is too old; version is PACKAGENERIC__DEV_PACK__VERSION: ${PACKAGENERIC__DEV_PACK__VERSION:-<none>}; required version is at least $packageneric__dev_pack__version__required; please download a newer version from:" &&
			packageneric__echo "http://psycle.sourceforge.net/packages/microsoft/dev-pack/release-notes"
			exit 1
		}
	;;
esac
