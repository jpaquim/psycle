ACLOCAL_AMFLAGS = -I packageneric/generic/detail/autotools/autoconf/m4

include $(top_srcdir)/packageneric/generic/detail/autotools/automake/init.am

include $(top_srcdir)/packageneric/+autogenerated/autotools/automake/package/nested/SUBDIRS.am
SUBDIRS += .
include $(top_srcdir)/packageneric/generic/detail/autotools/automake/package/modules.am
include $(top_srcdir)/packageneric/+autogenerated/autotools/automake/EXTRA_DIST.am
include $(top_srcdir)/packageneric/+autogenerated/autotools/automake/glob-sources.am
include $(top_srcdir)/packageneric/+autogenerated/autotools/automake/pixmaps/SUBDIRS.am
include $(top_srcdir)/packageneric/+autogenerated/autotools/automake/src/SUBDIRS.am

install-data-hook:
if PACKAGENERIC__OPERATING_SYSTEM__MICROSOFT
# When the operating system is microsoft's,
# this will be executed during the install and install-strip make targets.
# *-local targets are executed before.
# *-hook targets are executed after.
# See the packageneric/generic/detail/microsoft/make.install-hook script for further explanation.
	if test $$(basename $$(cd .. && pwd))` != nested ; \
	then \
		$(top_srcdir)/packageneric/generic/detail/microsoft/make.$@ $(DESTDIR)$(prefix) ; \
	fi
endif
if PACKAGENERIC__CONFIGURATION__OPTION__WITH__DOXYGEN
	$(top_srcdir)/packageneric/generic/detail/doxygen/build
endif
	echo -en '\007'
