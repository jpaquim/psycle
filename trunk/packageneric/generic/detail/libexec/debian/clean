#
# Cleans files generated by debhelper.
# \meta generic
# \meta standard gnu
#
##############################################################################

main()
{
	cd $($(dirname $0)/../root)/debian &&
	local verbose=--verbose &&
	rm $verbose --force --recursive compat files stamp-* ./+* &&
	for i in $(find . -name \*.install) # $(sed --silent 's/^Package: //p' < debian/control)
	do
		local package=$(basename $i .install) &&
		rm $verbose --force --recursive $package $package.substvars $package.*.debhelper ||
		{
			false
			return
		}
	done
} &&

main "$@"
