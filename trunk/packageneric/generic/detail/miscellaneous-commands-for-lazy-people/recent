set -o nounset &&

function main
{
	cd $($(dirname $0)/root) &&
	. ./packageneric/generic/detail/libexec/find &&
	(
		for dir in . $(eval find ${1:-.} $(packageneric__find__dir ! -path autom4te.cache/\\\* ! -path packageneric/+autogenerated/\\\*))
		do
			(
				cd $dir &&
				for file in $(eval find . -maxdepth 1 $(packageneric__find__file ! -name +\\\* ! -name Makefile.in))
				do
					echo $(date --universal +UTC-%Y-%m-%d-%H-%M-%S --reference $file) $dir/$file ||
					return
				done
			) ||
			return
		done
	) |
	sort
} &&

main "$@"
