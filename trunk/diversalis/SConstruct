#! /usr/bin/env scons

import os, packageneric

package = 'diversalis'

output = '++packageneric'

prefix = os.path.join(output, 'install')
includedir = os.path.join(prefix, 'include')
pkgincludedir = os.path.join(includedir, package)

package = 'diversalis'
BuildDir('++packagneric/build/scons', 'src', duplicate=0)
env = Environment()

print 'headers: '
for file in packageneric.GlobDirectoryWalker('src', '*.hpp'):
	print file
