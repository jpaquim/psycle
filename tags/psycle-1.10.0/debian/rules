#! /usr/bin/make -f
# http://www.debian.org/doc/devel-manuals

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export DH_OPTIONS=-v

%:
	dh $@

CXXFLAGS = -g -Wall
ifeq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
 CXXFLAGS += -O2 -DNDEBUG
endif

export DEB_HOST_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
export DEB_BUILD_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

ifeq ($(DEB_BUILD_GNU_TYPE), $(DEB_HOST_GNU_TYPE))
 CROSS_COMPILE =
else
 CROSS_COMPILE = \
  --cxx=$(DEB_HOST_GNU_TYPE)-g++ \
  --ar=$(DEB_HOST_GNU_TYPE)-ar
endif

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
 JOBS = --jobs=$(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
else
 JOBS=
endif

override_dh_auto_configure:
	:

override_dh_auto_build:
	build-systems/wonderbuild/wonderbuild_script.py \
		$(CROSS_COMPILE) \
		--cxx-flags='$(CXXFLAGS)' \
		--bld-dir=debian/++wonderbuild \
		--install-prefix-dir=/usr \
		$(JOBS)

override_dh_auto_test:
	set -e && \
	for test in debian/++wonderbuild/staged-install/usr/bin/*-unit-tests; \
	do \
		$$test --log_level=test_suite --report_level=detailed; \
	done

override_dh_auto_install:
	:

override_dh_install:
	for i in $$(cat debian/libpsycle-helpers-math1-dev.install); do install -d debian/libpsycle-helpers-math1-dev/$$(dirname $$i) && mv debian/++wonderbuild/staged-install/$$i debian/libpsycle-helpers-math1-dev/$$i; done
	dh_install --sourcedir=debian/++wonderbuild/staged-install --package=libpsycle-helpers1-dev
	for i in $$(cat debian/libpsycle-helpers-math1-dev.install); do mv debian/libpsycle-helpers-math1-dev/$$i debian/++wonderbuild/staged-install/$$i; done
	dh_install --sourcedir=debian/++wonderbuild/staged-install --remaining-packages

override_dh_auto_clean:
	rm -Rf debian/++wonderbuild

