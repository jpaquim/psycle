-- $(machinename).lua

machine = require("psycle.machine"):new()

local maincanvas = require("maincanvas")
local settingsmanager = require("psycle.settingsmanager")

function machine:info()
  return {
    vendor = "$(vendor)",
    name = "$(machinename)",
    mode = machine.HOST,
    version = 0,
    api=0
  }
end

function machine:init()  
  self.settingsmanager = settingsmanager:new("$(machinename)")
  self.maincanvas = maincanvas:new()
  self:setcanvas(self.maincanvas)
end

return machine