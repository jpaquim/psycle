function main
{
	cd $(dirname $0) &&
	find -follow -type f -perm +0100 -exec chmod u=rwx,g=rwx,o=r {} \;
	find -follow -type f ! -perm +0100 -exec chmod ug=rw,o=r {} \;
	find -follow -type d -exec chmod u=rwx,g=rwsx,o=rx {} \;
} &&

main "$@"
