#! /usr/bin/env sh

main()
{
	cd $(dirname $0) &&
	out=$(basename $0 .glob-files) &&
	stanza=$(basename $out .am) &&
	echo "# this file was autogenerated by $0 ; do not edit" > $out &&
	for x in $(find xpsycle/ \( -type d -name todo -prune \) -or \( \( -name \*.hpp -or -name \*.h \) -print \))
	do
		echo $stanza += $x >> $out ||
		return
	done
} &&

main "$@"
