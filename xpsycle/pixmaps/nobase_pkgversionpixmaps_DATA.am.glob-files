#! /bin/sh

main()
{
	cd $(dirname $0) &&
	out=$(basename $0 .glob-files) &&
	stanza=$(basename $out .am) &&
	echo "# this file was autogenerated by $0 ; do not edit" > $out &&
	for x in $(find ./ \( -type d -name todo -prune \) -or \( \( -name \*.xpm -or -name \*.png -or -name \*.jpeg \) -print \))
	do
		echo $stanza += $x >> $out ||
		return
	done
} &&

main "$@"
